  <line x1="72" y1="114" x2="120" y2="114" stroke="#8B4513" stroke-width="3" opacity="0.5"/>
  
  <!-- Bookmark ribbon -->
  <path d="M132 24 L132 108 L120 96 L108 108 L108 24 Z" fill="#DC143C" opacity="0.9"/>
